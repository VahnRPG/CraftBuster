<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="CraftBuster_BusterFrame.lua"/>

	<Button name="CraftBuster_Buster_ButtonTemplate" inherits="SecureActionButtonTemplate,ItemButtonTemplate" frameStrata="LOW" enableMouse="true" virtual="true" hidden="true">
		<Size>
			<AbsDimension x="36" y="36"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="0" y="-1"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Frames>
			<Cooldown name="$parentCooldown" inherits="CooldownFrameTemplate"/>
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
			<OnEnter>
				CraftBuster_Buster_Button_OnEnter(self);
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
				ResetCursor();
			</OnLeave>
		</Scripts>
	</Button>

	<Frame name="CraftBuster_Buster_MoverFrame" parent="UIParent" frameStrata="LOW" toplevel="true" enableMouse="true" movable="true" hidden="true">
		<Size>
			<AbsDimension x="180" y="10"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER" relativeTo="UIParent"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parent_Texture" file="Interface\AddOns\CraftBuster\Images\CraftBuster_Mover">
					<Size>
						<AbsDimension x="180" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString name="$parentLabel" inherits="GameFontHighlight" text="Buster">
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parent_ConfigMenu" hidden="false">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="8" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\AddOns\CraftBuster\Images\CraftBuster_Mover_Menu" />
				<Scripts>
					<OnClick>
						securecall("CraftBuster_Config_Show");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_CollapseFrame" hidden="false">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-16" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\AddOns\CraftBuster\Images\CraftBuster_Mover_Collapse" />
				<Scripts>
					<OnClick>
						securecall("CraftBuster_BusterFrame_Collapse_OnClick");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_CloseFrame" hidden="false">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_CollapseFrame" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-2" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\AddOns\CraftBuster\Images\CraftBuster_Mover_Close" />
				<Scripts>
					<OnClick>
						securecall("CraftBuster_BusterFrame_Close_OnClick");
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnDragStart>
				self.dragging = true;
				self:StartMoving();
			</OnDragStart>
			<OnDragStop>
				self.dragging = false;
				self:StopMovingOrSizing();
			</OnDragStop>
			<OnUpdate>
				if (self.dragging) then
					CraftBuster_BusterFrame_OnDrag();
				end
			</OnUpdate>
		</Scripts>
	</Frame>

	<Frame name="CraftBuster_BusterFrame" parent="UIParent" frameStrata="LOW" toplevel="true" enableMouse="true" movable="true" hidden="true">
		<Size>
			<AbsDimension x="180" y="185"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="CraftBuster_Buster_MoverFrame" relativePoint="BOTTOMLEFT">
				<Offset>
					<AbsDimension x="0" y="2"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentNoneFound" inherits="GameFontHighlight" text="None Found!" hidden="false">
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
		<Frames>
			<ScrollFrame name="$parentScrollFrame" inherits="FauxScrollFrameTemplate">
				<Size>
					<AbsDimension x="180" y="170"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="0" y="-11"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
							<Size>
								<AbsDimension x="31" y="170"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
									<Offset>
										<AbsDimension x="-2" y="5"/>
									</Offset>
								</Anchor>
							</Anchors>
							<TexCoords left="0" right="0.484375" top="0" bottom="1.0"/>
						</Texture>
						<Texture file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
							<Size>
								<AbsDimension x="31" y="106"/>
							</Size>
							<Anchors>
								<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT">
									<Offset>
										<AbsDimension x="-2" y="-2"/>
									</Offset>
								</Anchor>
							</Anchors>
							<TexCoords left="0.515625" right="1.0" top="0" bottom="0.4140625"/>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						CraftBuster_BusterFrame_ScrollFrame_OnLoad(self);
					</OnLoad>
					<OnVerticalScroll>
						FauxScrollFrame_OnVerticalScroll(self, offset, BUSTER_ICON_ROW_HEIGHT, CraftBuster_BusterFrame_ScrollFrame_Update);
					</OnVerticalScroll>
				</Scripts>
			</ScrollFrame>
			<Frame name="$parentActionsFrame" hidden="true">
				<Size>
					<AbsDimension x="180" y="37"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="2"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentProcessing" inherits="GameFontHighlight" text="Processing..." hidden="true">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
									<Offset>
										<AbsDimension x="65" y="-11"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="16"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="5" right="5" top="5" bottom="5"/>
					</BackgroundInsets>
				</Backdrop>
			</Frame>
			<Button name="CraftBuster_BusterFrameSort" inherits="UIPanelButtonTemplate" text="SORT" hidden="true">
				<Size>
					<AbsDimension x="50" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="4" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CraftBuster_BusterFrameSort(self);
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnShow>
				CraftBuster_BusterFrame_OnShow(self);
			</OnShow>
			<OnHide>
				CraftBuster_BusterFrame_OnHide(self);
			</OnHide>
			<OnEvent>
				CraftBuster_BusterFrame_OnEvent(self, event, ...);
			</OnEvent>
			<OnUpdate>
				CraftBuster_BusterFrame_OnUpdate(self, elapsed);
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>